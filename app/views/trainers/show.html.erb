<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% if @trainer == current_trainer %>
  <%= button_to "Create Pokemon", new_pokemon_path, :class => "button medium", :method => :get %>
<% end %>
<p>Pokemon: <br>
  <% Pokemon.all.each do |poke| %>
    <% if poke.trainer_id == @trainer.id %>
      <%= poke.name %>, level
      <%= poke.level %>, health:
      <%= poke.health %>
        <%= button_to "Damage!", damage_path(id: poke, id2: @trainer.id), :class => "button medium", :method => :patch %>
      <% if @trainer == current_trainer %>
        <%= button_to "Heal Pokemon", heal_path(id: poke), :class => "button medium", :method => :patch %>
      <% end %> <br>
    <% end %> </p>
<% end %>
